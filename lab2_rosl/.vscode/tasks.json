{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",                    // Включить символы отладки
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/project.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Сборка проекта с помощью g++"
        }
    ]
}
